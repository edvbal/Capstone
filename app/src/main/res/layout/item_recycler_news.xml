<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parentNewsItemLayout"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackgroundBorderless"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/newsItemCardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="6dp"
        app:cardCornerRadius="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/newsItemImage"
                android:layout_width="182dp"
                android:layout_height="match_parent"
                android:contentDescription="@string/description_article_image"
                android:foregroundGravity="center_vertical|left"
                android:padding="6dp"
                tools:background="@drawable/splash_drawable" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/newsItemTitleText"
                    style="?attr/textAppearanceLargePopupMenu"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="6dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    tools:text="Once upon a time" />

                <TextView
                    android:id="@+id/newsItemDateText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:gravity="center"
                    tools:text="2016-05-65" />

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>