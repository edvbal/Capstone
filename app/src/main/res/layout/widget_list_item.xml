<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parentLayout"
    android:layout_width="match_parent"
    android:layout_height="82dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/widgetNewsItemImage"
        android:layout_width="144dp"
        android:layout_height="match_parent"
        android:layout_margin="6dp"
        android:contentDescription="@string/description_article_image"
        android:foregroundGravity="center_vertical|left" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/newsItemTitleText"
            style="?attr/textAppearanceLargePopupMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="center_vertical"
            tools:text="Once upon a time" />

        <TextView
            android:id="@+id/newsItemDateText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:gravity="center"
            tools:text="2016-05-65" />
    </LinearLayout>
</LinearLayout>